  [data-theme="dark"] .grid-2,
  [data-theme="dark"] .grid-3,
  [data-theme="dark"] .grid-4 {
    grid-template-columns: 1fr;
  }
}

/* Dark Mode Animation Enhancements */
[data-theme="dark"] .fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Dark Mode Glow Effects */
[data-theme="dark"] .glow {
  box-shadow: 0 0 20px rgba(0, 166, 182, 0.3);
}

[data-theme="dark"] .glow:hover {
  box-shadow: 0 0 30px rgba(0, 166, 182, 0.5);
}
