/* Dark Mode Theme Styles */
/* This file contains dark mode specific overrides and enhancements */

/* Dark Mode Color Variables */
[data-theme="dark"] {
  --background: #121212;
  --surface: #1E1E1E;
  --primary-text: #FFFFFF;
  --secondary-text: #B3B3B3;
  --border: #333333;
  --primary-accent: #00A6B6;
  --primary-hover: #1BC2CF;
  --secondary: #13455A;
  --disabled: #555555;
  
  /* Dark Mode Specific Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(0, 0, 0, 0.4);
}

/* Dark Mode Specific Enhancements */

/* Enhanced Card Styles for Dark Mode */
[data-theme="dark"] .card {
  background-color: var(--surface);
  border: 1px solid var(--border);
  box-shadow: var(--shadow-sm);
  backdrop-filter: blur(10px);
}

[data-theme="dark"] .card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
  border-color: var(--primary-accent);
}

/* Dark Mode Button Variations */
[data-theme="dark"] .btn-outline {
  background-color: transparent;
  color: var(--primary-text);
  border: 2px solid var(--border);
}

[data-theme="dark"] .btn-outline:hover {
  background-color: var(--surface);
  border-color: var(--primary-accent);
  color: var(--primary-accent);
}

[data-theme="dark"] .btn-ghost {
  background-color: transparent;
  color: var(--secondary-text);
  border: none;
}

[data-theme="dark"] .btn-ghost:hover {
  background-color: var(--surface);
  color: var(--primary-text);
}

/* Dark Mode Form Enhancements */
[data-theme="dark"] .form-group {
  margin-bottom: var(--spacing-lg);
}

[data-theme="dark"] .form-label {
  display: block;
  margin-bottom: var(--spacing-xs);
  font-weight: 500;
  color: var(--primary-text);
}

[data-theme="dark"] .form-input {
  background-color: var(--surface);
  border: 2px solid var(--border);
  color: var(--primary-text);
}

[data-theme="dark"] .form-input:focus {
  border-color: var(--primary-accent);
  box-shadow: 0 0 0 3px rgba(0, 166, 182, 0.2);
}

[data-theme="dark"] .form-input:invalid {
  border-color: #ef4444;
}

[data-theme="dark"] .form-input::placeholder {
  color: var(--disabled);
}

/* Dark Mode Navigation */
[data-theme="dark"] .nav {
  background-color: var(--surface);
  border-bottom: 1px solid var(--border);
  box-shadow: var(--shadow-sm);
}

[data-theme="dark"] .nav-link {
  color: var(--secondary-text);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

[data-theme="dark"] .nav-link:hover,
[data-theme="dark"] .nav-link.active {
  color: var(--primary-accent);
  background-color: var(--background);
}

/* Dark Mode Sidebar */
[data-theme="dark"] .sidebar {
  background-color: var(--surface);
  border-right: 1px solid var(--border);
}

[data-theme="dark"] .sidebar-item {
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--secondary-text);
  border-radius: var(--radius-md);
  margin: var(--spacing-xs) 0;
  transition: all var(--transition-fast);
}

[data-theme="dark"] .sidebar-item:hover {
  background-color: var(--background);
  color: var(--primary-text);
}

[data-theme="dark"] .sidebar-item.active {
  background-color: var(--primary-accent);
  color: white;
}

/* Dark Mode Table */
[data-theme="dark"] .table {
  width: 100%;
  border-collapse: collapse;
  background-color: var(--surface);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

[data-theme="dark"] .table th {
  background-color: var(--background);
  color: var(--primary-text);
  font-weight: 600;
  padding: var(--spacing-md);
  text-align: left;
  border-bottom: 1px solid var(--border);
}

[data-theme="dark"] .table td {
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--border);
  color: var(--secondary-text);
}

[data-theme="dark"] .table tr:hover {
  background-color: var(--background);
}

/* Dark Mode Modal */
