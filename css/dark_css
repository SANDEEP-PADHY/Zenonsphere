}

[data-theme="dark"] .modal-body {
  padding: var(--spacing-lg);
}

[data-theme="dark"] .modal-footer {
  border-top: 1px solid var(--border);
  padding: var(--spacing-lg);
  background-color: var(--background);
}

/* Dark Mode Alert */
[data-theme="dark"] .alert {
